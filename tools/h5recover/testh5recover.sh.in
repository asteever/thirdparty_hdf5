	echo first diff did not fail as expected
    fi
    # Recover the file.
    # $RUNSERIAL $RECOVERTOOL_BIN -j $TOOLJournalFile $TOOLDataFile > /dev/null
    try_h5recover $TOOLJournalFile $TOOLDataFile
    if [ $? != 0 ]; then
	echo $RECOVERTOOL failed
	nerrors="`expr $nerrors + 1`"
    fi
    # JRM -- 12/10/08
